<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".InicioActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="100dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:onClick="ClickBack"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <EditText

                android:id="@+id/edtxtsearch"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_search"
                android:hint="Buscar turnos">

            </EditText>

            <androidx.cardview.widget.CardView
                android:id="@+id/clickperfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/viewminiperfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blank_profile" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvverifI"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="-30dp"
                android:layout_marginBottom="-15dp"
                android:backgroundTint="#00F3F3F3"
                app:cardCornerRadius="1000dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_verified" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/swipe_container"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_above="@+id/boot"
                android:layout_below="@+id/head"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="1dp"
                            android:background="@color/grey"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:text="Pacientes que se atenderan hoy"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rviewclientea"
                            android:layout_width="match_parent"
                            android:layout_height="240dp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="5dp">

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/grey"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawableTint="@color/black"
                        android:focusable="false"
                        android:onClick="AddAppointment"
                        android:text="Crear turno"
                        android:textColor="@color/black"

                        />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_200"
                    app:cardCornerRadius="100dp"

                    app:cardElevation="5dp">

                    <Button

                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_add"
                        android:drawableTint="@color/white"
                        android:onClick="AddPatient"
                        android:text="Registrar cliente"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginHorizontal="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_marginVertical="1dp"
                        android:background="@color/grey"
                        android:elevation="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Pacientes registrados"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearV"

                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rviewclienteb"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatcanc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:backgroundTint="@color/purple_200"
            app:tint="@color/white"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:focusable="true"
            android:onClick="ClickCalendar"
            android:longClickable="false"
            android:src="@drawable/ic_calendar"
            app:backgroundTint="#00FFFFFF">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnodontologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            app:tint="@color/black"
            android:baselineAlignBottom="true"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="false"
            android:src="@drawable/ic_info"
            app:backgroundTint="#00FFFFFF">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>



    </LinearLayout>


</RelativeLayout>